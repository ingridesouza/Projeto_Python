registros_consumo = {}

def criar_registro(nome_cliente, valor_consumido):
    registros_consumo[nome_cliente] = valor_consumido
    print(f"Registro de {nome_cliente} criado com sucesso!")

def ler_registros():
    if registros_consumo:
        for cliente, valor in registros_consumo.items():
            print(f"{cliente}: R${valor:.2f}")
    else:
        print("Não há registros de consumo disponíveis.")

def atualizar_registro(nome_cliente, novo_valor):
    if nome_cliente in registros_consumo:
        registros_consumo[nome_cliente] = novo_valor
        print(f"Registro de {nome_cliente} atualizado com sucesso!")
    else:
        print(f"Cliente {nome_cliente} não encontrado.")

def excluir_registro(nome_cliente):
    if nome_cliente in registros_consumo:
        del registros_consumo[nome_cliente]
        print(f"Registro de {nome_cliente} excluído com sucesso!")
    else:
        print(f"Cliente {nome_cliente} não encontrado.")

def main():
    while True:
        print("\nSistema de Controle de Consumo de Restaurante")
        print("1. Criar Registro")
        print("2. Ler Registros")
        print("3. Atualizar Registro")
        print("4. Excluir Registro")
        print("5. Sair")

        escolha = input("Escolha uma opção (1/2/3/4/5): ")

        if escolha == "1":
            nome_cliente = input("Nome do cliente: ")
            valor_consumido = float(input("Valor consumido: "))
            criar_registro(nome_cliente, valor_consumido)
        elif escolha == "2":
            ler_registros()
        elif escolha == "3":
            nome_cliente = input("Nome do cliente a ser atualizado: ")
            novo_valor = float(input("Novo valor consumido: "))
            atualizar_registro(nome_cliente, novo_valor)
        elif escolha == "4":
            nome_cliente = input("Nome do cliente a ser excluído: ")
            excluir_registro(nome_cliente)
        elif escolha == "5":
            print("Saindo do sistema.")
            break
        else:
            print("Opção inválida. Por favor, escolha uma opção válida.")

if __name__ == "__main__":
    main()
